<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneyloveramateur">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyLoverAmateur"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.AfterLoginActivity"></activity>
        <activity android:name=".activity.UpdateRemoveBudgetActivity" />
        <activity android:name=".activity.AddBudgetActivity" />
        <activity android:name=".activity.UpdateExchangeActivity" />
        <activity android:name=".activity.AddExchangeActivity" />
        <activity android:name=".activity.ExchangeDetailActivity" />
        <activity android:name=".activity.UpdateRemoveWalletActivity" />
        <activity android:name=".activity.SelectWalletActivity" />
        <activity android:name=".activity.ManageWalletActivity" />
        <activity android:name=".activity.AddWalletActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />

        <receiver android:name=".receiver.NotificationReceiver" />
    </application>

</manifest>